{
  "name": "infokiosk",
  "version": "1.0.0",
  "description": "InfoKiosk desktop app (Electron + Express)",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "mysql2": "^3.15.2"
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.infokiosk.app",
    "productName": "InfoKiosk",
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "artifactName": "InfoKiosk.exe"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/*.map"
    ]
  }
}
